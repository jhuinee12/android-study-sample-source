<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰"/>
    <Button
        android:id="@+id/btn_webview_kotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰 kotlin"/>

    <Button
        android:id="@+id/btn_webview_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰(로컬html)"/>
    <Button
        android:id="@+id/btn_webview_local_kotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰(로컬html) kotlin"/>

    <Button
        android:id="@+id/btn_webview_nb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰(앞뒤이동)"/>
    <Button
        android:id="@+id/btn_webview_nb_kotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰(앞뒤이동) kotlin"/>

    <Button
        android:id="@+id/btn_webview_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰와의 통신"/>
    <Button
        android:id="@+id/btn_webview_server_kotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹뷰와의 통신 kotlin"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="로그인"/>
    <Button
        android:id="@+id/btn_login_kotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="로그인 kotlin"/>

</LinearLayout>